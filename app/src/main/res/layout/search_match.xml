<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="115dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:elevation="10dp"
        android:clickable="true"
        android:onClick="enlargeCardClick">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="auto"
                android:scaleType="fitXY" />
            <TextView
                android:id ="@+id/activityType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id ="@+id/activityDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activityType"/>
            <TextView
                android:id ="@+id/activityLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activityDate"/>
            <TextView
                android:id ="@+id/activityMinPart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activityLocation"/>
            <TextView
                android:id ="@+id/activityMaxPart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activityMinPart"/>
            <TextView
                android:id ="@+id/activityEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activityMaxPart"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>